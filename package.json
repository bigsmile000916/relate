{
  "name": "relate",
  "version": "0.0.14",
  "author": "Sebastien Dubois",
  "license": "GPL-3.0",
  "main": "./server",
  "scripts": {
    "postinstall": "sh scripts/createDefaultConfig.sh",
    "dev": "nodemon -w server -w universal -w yarn.lock -w next.config.js -w package.json",
    "build": "NODE_ENV=production next build",
    "start": "NODE_ENV=production node server",
    "lint-staged": "lint-staged",
    "deploy": "eslint . && now && now alias",
    "bundle:analyze": "NODE_ENV=analyze yarn dev",
    "bundle:view": "webpack-bundle-analyzer .next/stats.json"
  },
  "dependencies": {
    "accept-language": "^3.0.15",
    "apollo-client": "^0.8.5",
    "auth0-lock": "^10.11.0",
    "babel-plugin-transform-define": "^1.2.0",
    "body-parser": "^1.16.1",
    "express": "^4.14.1",
    "express-session": "^1.15.1",
    "graphql-anywhere": "^2.2.0",
    "graphql-tag": "^1.2.4",
    "isomorphic-fetch": "^2.2.1",
    "lru-cache": "^4.0.2",
    "next": "^2.0.0-beta",
    "next-routes": "^1.0.15",
    "nprogress": "^0.2.0",
    "react": "^15.4.2",
    "react-apollo": "^0.10.1",
    "react-dom": "^15.4.2",
    "react-ga": "^2.1.2",
    "react-intl": "^2.2.3",
    "react-no-ssr": "^1.1.0",
    "react-player": "^0.14.1",
    "react-redux": "^5.0.3",
    "redux": "^3.6.0",
    "redux-thunk": "^2.2.0",
    "session-file-store": "^1.0.0",
    "smooch": "^3.11.0",
    "uuid": "^3.0.1"
  },
  "devDependencies": {
    "babel-eslint": "^7.1.0",
    "eslint": "^3.15.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.0.1",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.4.1",
    "lint-staged": "^3.3.0",
    "nodemon": "^1.11.0",
    "pre-commit": "^1.1.3",
    "webpack-bundle-analyzer": "^2.3.0"
  },
  "babel": {
    "presets": [
      "next/babel"
    ],
    "plugins": [
      [
        "transform-define",
        "./universal/config.js"
      ]
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb",
    "globals": {
      "document": true,
      "window": true,
      "process": true,
      "fetch": false,
      "ANALYTICS_TRACKING_ID": false,
      "AUTH0_CLIENT_ID": false,
      "AUTH0_DOMAIN": false,
      "GRAPHQL_ENDPOINT": false,
      "NEWSLETTER_FORM_ACTION": false,
      "NEWSLETTER_FORM_INPUT_NAME": false,
      "SESSION_SECRET": false,
      "SMOOCH_SECRET": false
    },
    "rules": {
      "react/forbid-prop-types": 0,
      "react/jsx-filename-extension": 0,
      "react/react-in-jsx-scope": 0
    }
  },
  "lint-staged": {
    "*.js": "eslint"
  },
  "now": {
    "alias": "relate"
  },
  "pre-commit": "lint-staged"
}
