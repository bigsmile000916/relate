{
  "name": "relate",
  "version": "0.0.1",
  "author": "Sebastien Dubois",
  "license": "GPL-3.0",
  "main": "./server.js",
  "scripts": {
    "postinstall": "sh scripts/createDefaultConfig.sh",
    "dev": "nodemon -w server.js",
    "build": "NODE_ENV=production next build && echo 'success'",
    "start": "NODE_ENV=production node server.js",
    "lint-staged": "lint-staged",
    "deploy": "eslint . && now && now alias"
  },
  "dependencies": {
    "apollo-client": "^0.8.0",
    "auth0-lock": "^10.10.2",
    "body-parser": "^1.16.0",
    "express": "^4.14.0",
    "express-session": "^1.15.0",
    "graphql-anywhere": "^2.0.0",
    "graphql-tag": "^1.2.3",
    "next": "^2.0.0-beta",
    "nprogress": "^0.2.0",
    "react-apollo": "^0.8.3",
    "react-ga": "^2.1.2",
    "react-player": "^0.14.1",
    "session-file-store": "^1.0.0",
    "smooch": "^3.9.7",
    "uuid": "^3.0.1"
  },
  "devDependencies": {
    "babel-eslint": "^7.1.0",
    "eslint": "^3.14.0",
    "eslint-config-airbnb": "^14.0.0",
    "eslint-plugin-import": "^2.0.1",
    "eslint-plugin-jsx-a11y": "^3.0.2",
    "eslint-plugin-react": "^6.4.1",
    "lint-staged": "^3.2.8",
    "nodemon": "^1.11.0",
    "pre-commit": "^1.1.3"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb",
    "globals": {
      "document": true,
      "window": true,
      "process": true
    },
    "rules": {
      "import/extensions": 0,
      "import/no-extraneous-dependencies": 0,
      "import/no-unresolved": 0,
      "react/forbid-prop-types": 0,
      "react/jsx-filename-extension": 0,
      "react/no-unused-prop-types": 0,
      "react/react-in-jsx-scope": 0,
      "linebreak-style": 0,
      "no-underscore-dangle": 0
    }
  },
  "lint-staged": {
    "*.js": "eslint"
  },
  "now": {
    "alias": "relate"
  },
  "pre-commit": "lint-staged"
}
