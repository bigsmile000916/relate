{
  "name": "relate",
  "version": "0.0.9",
  "author": "Sebastien Dubois",
  "license": "GPL-3.0",
  "main": "./server",
  "scripts": {
    "postinstall": "sh scripts/createDefaultConfig.sh",
    "dev": "nodemon -w server -w universal",
    "build": "NODE_ENV=production next build",
    "start": "NODE_ENV=production node server.js",
    "lint-staged": "lint-staged",
    "deploy": "eslint . && now && now alias"
  },
  "dependencies": {
    "apollo-client": "^0.8.2",
    "auth0-lock": "^10.11.0",
    "babel-plugin-transform-define": "^1.2.0",
    "body-parser": "^1.16.0",
    "express": "^4.14.1",
    "express-request-language": "^1.1.9",
    "express-session": "^1.15.0",
    "graphql-anywhere": "^2.2.0",
    "graphql-tag": "^1.2.4",
    "next": "^2.0.0-beta",
    "next-routes": "^1.0.14",
    "nprogress": "^0.2.0",
    "react-apollo": "^0.10.0",
    "react-ga": "^2.1.2",
    "react-intl": "^2.2.3",
    "react-no-ssr": "^1.1.0",
    "react-player": "^0.14.1",
    "redux-thunk": "^2.2.0",
    "session-file-store": "^1.0.0",
    "smooch": "^3.11.0",
    "uuid": "^3.0.1"
  },
  "devDependencies": {
    "babel-eslint": "^7.1.0",
    "eslint": "^3.15.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.0.1",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.4.1",
    "lint-staged": "^3.3.0",
    "nodemon": "^1.11.0",
    "pre-commit": "^1.1.3"
  },
  "babel": {
    "presets": [
      "next/babel"
    ],
    "plugins": [
      [
        "transform-define",
        "./universal/config.js"
      ]
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb",
    "globals": {
      "document": true,
      "window": true,
      "process": true,
      "fetch": false,
      "ANALYTICS_TRACKING_ID": false,
      "AUTH0_CLIENT_ID": false,
      "AUTH0_DOMAIN": false,
      "GRAPHQL_ENDPOINT": false,
      "NEWSLETTER_FORM_ACTION": false,
      "NEWSLETTER_FORM_INPUT_NAME": false,
      "SESSION_SECRET": false,
      "SMOOCH_SECRET": false
    },
    "rules": {
      "import/extensions": 0,
      "import/no-extraneous-dependencies": 0,
      "import/no-unresolved": 0,
      "react/forbid-prop-types": 0,
      "react/jsx-filename-extension": 0,
      "react/no-unused-prop-types": 0,
      "react/react-in-jsx-scope": 0,
      "linebreak-style": 0,
      "no-underscore-dangle": 0
    }
  },
  "lint-staged": {
    "*.js": "eslint"
  },
  "now": {
    "aliases": [
      "relate"
    ]
  },
  "pre-commit": "lint-staged"
}
